<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="alert_dialog_light" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>

        <item name="sweet_alert_bg_drawable">@drawable/dialog_background</item>
        <item name="sweet_alert_title_text_color">@color/title_color</item>
        <item name="sweet_alert_content_text_color">@color/message_color</item>
    </style>

    <style name="alert_dialog_dark" parent="alert_dialog_light">
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="sweet_alert_bg_drawable">@drawable/dialog_background_dark</item>
        <item name="sweet_alert_title_text_color">@color/title_color_dark</item>
        <item name="sweet_alert_content_text_color">@color/message_color_dark</item>
    </style>

    <style name="dialog_blue_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">85dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingStart">21dp</item>
        <item name="android:paddingEnd">21dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ButtonConfirm" parent="dialog_blue_button">
        <item name="android:backgroundTint">@drawable/green_button_background</item>
        <item name="strokeColor">@color/main_green_stroke_color</item>
        <item name="strokeWidth">@dimen/buttons_stroke_width</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonNeutral" parent="dialog_blue_button">
        <item name="android:backgroundTint">@color/gray_btn_bg_color</item>
        <item name="strokeColor">@color/gray_btn_bg_pressed_color</item>
        <item name="strokeWidth">@dimen/buttons_stroke_width</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ButtonCancel" parent="dialog_blue_button">
        <item name="android:backgroundTint">@color/red_btn_bg_color</item>
        <item name="strokeColor">@color/red_btn_bg_pressed_color</item>
        <item name="strokeWidth">@dimen/buttons_stroke_width</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

</resources>